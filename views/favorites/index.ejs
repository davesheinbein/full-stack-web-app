<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <title>Fav<%= title %></title>
</head>
    <body>
        <header>
            <nav>
                <div>
                    <a class="navBar" id="logoTxt" href="/"><img src="/images/Logo.png" alt="LA" class="logoimg"/>Fav<%= title %></a>
                    <!-- <a class="navBar" href="/"> replace with sqids </a> -->
                </div>
                    <ul>
                        <li><a class="navBar" href="/">Home</a></li>
                        <li class="divLine">||</li>
                        <li><a class="navBar" href="/gifs">Gifs</a></li>
                        <li class="divLine">||</li>
                        <li><a class="navBar" href="/videos">Videos</a></li>
                        <li class="divLine">||</li>
                        <li><a class="navBar" id="active" href="/favorites">Favorites</a></li>
                    </ul>
                    <div class="oAuth navBar">
                      <% if (user) { %>
                        <a class="navBar" href="/logout"><i class="material-icons left">turned_in</i>Log Out</a>
                        <% } else { %>
                        <a class="navBar" href="/auth/google"><i class="material-icons left">turned_in_not</i>  Login with Google</a>
                        <% } %>
                    </div>
            </nav>
        </header>
  <main>
    <h1><strong>Fav</strong><%= title %></h1>
    <h1>Gifs <!-- replace with sqids --></h1>
    <p> View your favorite Gifs!</p>
    <div class="container">
        <%# gifs.forEach(function(g) { %> 
            <img src="<%# g.src %> " alt="<%# g.title %> "/> 
            <!-- to delete -->
            <form id="formBtns" action="/gifs/<%# g._id %>?_method=POST" 
                class="favorite-form" method="POST">
                <p>Click to favorite</p>
                <button class="favBtn" type="submit"><img class="heartImg" src="/images/fav-heart.png" alt="Heart"></button> <!-- add heart -->
            </form>
        <%# }); %> 
    <h1>Videos <!-- replace with sqids --></h1>
    <p> View your favorite Videos!</p>
    <div class="container"> 
        <%# videos.forEach(function(vid) { %>
        <iframe width="560" height="315" src="<%# vid.src %> " frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        <!-- to delete -->
        <form id="formBtns" action="/videos/<%# g._id %>?_method=POST" 
            class="favorite-form" method="POST">
            <p>Click to favorite</p>
            <button class="favBtn" type="submit"><img class="heartImg" src="/images/fav-heart.png" alt="Heart"></button> <!-- add heart -->
        </form>
        <%# }); %> 